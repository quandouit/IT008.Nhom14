<Window x:Class="QuanLyChiTieu.View.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:QuanLyChiTieu.View"
        xmlns:viewmodel="clr-namespace:QuanLyChiTieu.ViewModel"
        mc:Ignorable="d"
        
        Title="RegisterView"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Height="720"
        Width="480">
    
    <Window.DataContext>
        <viewmodel:RegisterViewModel/>
    </Window.DataContext>

    <Border CornerRadius="10"
            BorderBrush="{StaticResource darkBorder}"
            BorderThickness="1"
            Background="{StaticResource lightBackground}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <Button Style="{StaticResource winCtrButton}"
                    Tag="{StaticResource redUI}"
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                    Grid.Column="1"
                    Grid.Row="0"
                    HorizontalAlignment="Right">
                <fa:IconImage Icon="Xmark" Style="{StaticResource winCtrIcon}"/>
            </Button>

            <StackPanel Grid.Row="1"
                        HorizontalAlignment="Center"
                        Orientation="Vertical">
                <TextBlock Height="Auto"
                           Text="ĐĂNG KÝ"
                           FontFamily="Montserrat"
                           FontSize="30"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0 30 0 10"
                           Foreground="{StaticResource darkBackground}"/>

                <TextBlock Height="Auto"
                           Text="-- HOẶC -- "
                           FontFamily="Montserrat"
                           FontSize="12"
                           FontWeight="Normal"
                           HorizontalAlignment="Center"
                           Margin="0"
                           Foreground="{StaticResource darkBackground}"/>

                <Button Style="{StaticResource textButton}"
                        Content="Quay lại đăng nhập"
                        Margin="0 10"
                        FontWeight="SemiBold"
                        Command="{Binding BackToLogInCommmand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="80 0">
                <StackPanel Margin="0 40 0 10">
                    <TextBlock Text="Tên đăng nhập"
                               FontSize="16"/>
                    <TextBox Height ="25" 
                             FontSize="16"
                             Style="{StaticResource aLineTextBox}"
                             Margin="10"
                             Text="{Binding UserName, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Margin="0 10">
                    <TextBlock Text="Số điện thoại"
                               FontSize="16"/>
                    <TextBox Height ="25" 
                             FontSize="16"
                             Style="{StaticResource aLineTextBox}"
                             Margin="10"
                             Text="{Binding PhoneNumber, Mode=TwoWay}"/>
                </StackPanel>
                
                <StackPanel Margin="0 10">
                    <TextBlock Text="Mật khẩu"
                               FontSize="16"/>
                    <PasswordBox viewmodel:PasswordBoxHelper.Password="{Binding NewPassword, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 Style="{StaticResource aLinePasswordBox}"
                                 Height ="25" 
                                 Margin="10"/>
                </StackPanel>

                <StackPanel Margin="0 10">
                    <TextBlock Text="Nhập lại mật khẩu"
                               FontSize="16"/>
                    <PasswordBox viewmodel:PasswordBoxHelper.Password="{Binding ConfirmPass, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 Height ="25" 
                                 Margin="10">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox" BasedOn="{StaticResource aLinePasswordBox}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PasswordConfirmationError}" Value="Mật khẩu không khớp!">
                                        <Setter Property="BorderBrush" Value="{StaticResource redUI}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>
                    <TextBlock Text="{Binding PasswordConfirmationError}"
                               Foreground="{StaticResource redUI}"
                               FontSize="12"
                               HorizontalAlignment="Right"
                               Height="18"/>
                </StackPanel>
            </StackPanel>
            
            <Grid Grid.Row="3">
                <Button Content="Đăng ký"
                        FontSize="18"
                        Style="{StaticResource darkButtonStyle}"
                        Margin="0 0 0 20"
                        Command="{Binding TrySignUpCommmand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
            </Grid>
        </Grid>

    </Border>
</Window>