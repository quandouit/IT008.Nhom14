<UserControl x:Class="QuanLyChiTieu.View.PlanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyChiTieu.View" xmlns:viewmodel="clr-namespace:QuanLyChiTieu.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="630" d:DesignWidth="1000">

    <UserControl.DataContext>
        <viewmodel:PlanViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Border Background="Red"
        Width="200"
        Height="200"/>
        <Grid Background="{StaticResource lightBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource darkButtonStyle}"
                        Content="Thêm mới"
                        Command="{Binding AddingButoonCommand}"
                        FontSize="18"
                        Margin="20 0"/>
                </StackPanel>
            </Grid>


            <Grid Grid.Row="1"
              Height="400"
              Width="700">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="{StaticResource darkBackground}"
                    CornerRadius="10, 10, 0, 0"/>
                <Border Grid.Row="1"
                    Background="{StaticResource lightBorderShadow}"
                    CornerRadius="0, 0, 10, 10"/>
                <StackPanel Grid.Row="0"
                        VerticalAlignment="Center">
                    <TextBlock Text="Tháng này" 
                       FontFamily="Monsterat"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="10, 0, 0, 0"
                       Foreground="{StaticResource lightFont}"/>

                    <TextBlock Text="dd/mm - dd/mm" 
                       FontFamily="Monsterat"
                       FontSize="20"
                       Margin="10, 0 , 0 ,0"
                       Foreground="{StaticResource lightButtonBackground}"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <TextBlock Text="Ngân sách: 10,000,000"
                                   FontSize="20"
                                   FontFamily="Monsterat"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource darkButtonBackground}"
                                   Margin="0, 0, 10, 0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Còn lại: 7,000,000"
                                   FontSize="20"
                                   FontFamily="Monsterat"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource darkButtonBackground}"
                                   Margin="0, 0, 10, 0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"/>     
                    </StackPanel>

                    <ProgressBar Grid.Row="1"
                                 Width="500"
                                 Height="30"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="30"
                                 Background="{StaticResource lightButtonBorder}"
                                 Foreground="{StaticResource darkBackground}"/>

                </Grid>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
